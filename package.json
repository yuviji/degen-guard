{
  "name": "degenguard",
  "version": "0.1.0",
  "description": "AI-powered monitoring and protection layer for DeFi wallets",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "dev:data": "concurrently \"pnpm dev:server\" \"pnpm dev:client\" \"tsx watch src/worker/data-ingestion.ts\"",
    "dev:all": "concurrently \"pnpm dev:server\" \"pnpm dev:client\" \"tsx watch src/worker/rules-engine.ts\" \"tsx watch src/worker/data-ingestion.ts\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "cd src/client && pnpm run dev",
    "build": "pnpm build:server && pnpm build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd src/client && pnpm run build",
    "start": "node dist/server/index.js",
    "start:client": "cd src/client && pnpm run start",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "worker": "tsx src/worker/rules-engine.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.35.0",
    "@coinbase/coinbase-sdk": "^0.0.15",
    "@google/generative-ai": "^0.21.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tsx": "^4.6.2",
    "tw-animate-css": "1.3.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
