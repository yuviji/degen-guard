{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*",
    "src/database/**/*",
    "src/worker/**/*"
  ],
  "exclude": [
    "src/client/**/*",
    "node_modules/**/*"
  ]
}
